    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Core Services",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "runtimeVersion": "14"
        },{
            "type": "pwa-node",
            "request": "launch",
            "name": "Twitch Chat",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env" : {
                "CHANNEL_NAME": "BikeCurious",
                "INGEST_PATH": "http://localhost:4000/",
                "INGEST_CLIENT_ID": "something",
                "INGEST_CLIENT_SECRET": "something_secret",
            },
            "program": "${workspaceFolder}/twitch-chat/index.js",
            "runtimeVersion": "14"
        }
    ]
}